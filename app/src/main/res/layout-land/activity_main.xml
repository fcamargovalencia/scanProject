<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="imc.cursoandroid.gdgcali.com.imccalculator.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="273dp"
            android:layout_height="304dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/id_peso"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Peso"
                    android:textSize="26sp" />

                <EditText
                    android:id="@+id/id_et_peso"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"

                    android:layout_weight="0.19" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/id_altura"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Altura"
                    android:textSize="26sp" />

                <EditText
                    android:id="@+id/id_et_altura"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.19" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/id_btn_calcular"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="@string/calcular" />

                <Button
                    android:id="@+id/id_btn_cancelar"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="60dp"
                    android:text="@string/cancelar" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_linear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/id_howisicm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_is" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_linear2"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:layout_marginRight="@+id/id_l"
            android:layout_marginTop="20dp">

            <ListView
                android:id="@+id/id_lstview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>